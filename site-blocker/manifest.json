{
  "manifest_version": 3,
  "name": "GrayedOut",
  "version": "1.0.0",
  "description": "Block distracting websites by making them grayscale",

  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.svg"
  },

  "options_page": "options/options.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/grayscale.js"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "128": "icons/icon.svg"
  }
}
